var isGlobal = false;
$(document).ready( function(){
	$("#globalIcon").click( function(){
		if( isGlobal == false ){
			$("#globalList").animate({width: "650px"},200);
			$("#globalIcon").animate({right: "650px"},200);
			isGlobal = true;
		}else{
			$("#globalList").animate({width: "0px"},200);
			$("#globalIcon").animate({right: "0px"},200);
			isGlobal = false;
		}
	});
});